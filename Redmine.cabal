name: Redmine
version: 0.0.1
cabal-version: >=1.2
build-type: Simple
license: AllRightsReserved
license-file: ""
maintainer: charles.stpierre@gmail.com
synopsis: Librarie pour acc√©der aux services REST Redmine
description: http://www.redmine.org/projects/redmine/wiki/Rest_api
author: Charles St-Pierre
data-dir: ""

executable RedmineApp
    build-depends: QuickCheck -any, base -any, old-locale -any,
                   time -any, old-time -any, bytestring -any, http-conduit -any,
                   aeson -any, HTTP -any, network -any,
                   transformers -any, containers, http-client, http-client-tls,
                   resourcet, connection, MaybeT
    main-is: Main.hs
    buildable: True
    hs-source-dirs: src
    other-modules: Main

Library
    build-depends: QuickCheck -any, base -any, old-locale -any,
                   time -any, old-time -any, bytestring -any, http-conduit -any,
                   aeson -any, HTTP -any, network -any,
                   transformers -any, containers, http-client, http-client-tls,
                   resourcet, connection, MaybeT
    exposed-modules: Redmine.Types, Redmine.Manager, Redmine.Get
    buildable: True
    hs-source-dirs: src

test-suite test-Redmine
    build-depends: QuickCheck -any, base -any, HUnit
    type: exitcode-stdio-1.0
    main-is: testGet.hs
    buildable: True
    cpp-options: -DMAIN_FUNCTION=main
    hs-source-dirs: testsuite, src
